
<div class="row">
  <h1>Create a fav restaurant</h1>
    <div class="col-xs-6 col-lg-offset-4  col-lg-4">
      <%= simple_form_for @restaurant do |f| %>
      <%= f.input :name%>
      <%= f.input :category, collection: %w(french chinese italian japanese belgian) %>
      <%= f.input :address %>
      <%= f.input :review %>
      <%= f.submit class: "btn btn-primary" %>
      <% end %>
  </div>
<p><%= link_to "Back to my favs", restaurants_path, class: "btn btn-primary" %>
</div>

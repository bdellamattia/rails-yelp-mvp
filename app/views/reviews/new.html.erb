<div class="row">
  <h1>Create a review for <%= @restaurant.name %></h1>
    <div class="col-xs-6 col-lg-offset-4  col-lg-4">
      <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content%>
      <%= f.input :rating, collection: [1, 2, 3, 4, 5] %>
      <%= f.submit class: "btn btn-primary" %>
      <% end %>
  </div>
<p><%= link_to "Back to my favs", restaurants_path, class: "btn btn-primary" %>
</div>
